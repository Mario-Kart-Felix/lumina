<% pending_friendship(current_user).each do |user| %>
  <div class="d-flex bd-highlight mb-3 border-bottom pb-2">
    <div class="p-2 bd-highlight my-auto">
      <%= cloudinary_avatar_nav(user.avatar.key) %></div>
    <div class="p-2 bd-highlight my-auto"><%= " #{user.first_name} " %><%="#{user.last_name}" %> </div>
    <div class="ml-auto p-2 bd-highlight my-auto">
      <input
      type="button"
      class="btn btn-primary btn-sm my-auto"
      value="Accept"
      id="<%= user.id %>-Accept"
    />
        <input
      type="button"
      class="btn btn-default btn-sm my-auto"
      value="Reject"
      id="<%= user.id %>-Reject"
    />
        </div>
      </div>
    <% end %>
