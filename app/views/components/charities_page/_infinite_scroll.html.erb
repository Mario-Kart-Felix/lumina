<!-- Big giant container -->
<div class="container d-flex flex-wrap">
  <!-- Container to hold dog image and form -->
  <div class="container d-flex ">
    <!-- Container with dog image -->
    <div class="container container-image-dog w-50">
      <%= image_tag 'Sally-4.png', class:"img-fluid" %>
    </div>
    <!-- Container with form -->
    <div class="container d-flex flex-column w-50 my-auto">
      <h2>Charities</h2>
      <h5 style="color: lightgrey;" class="mb-4">At Lumina, we're proud to provide information and access
        to charities from around the world. We're putting a spotlight
        on organisations that genuinely make the world a better place.
      </h5>
      <%= form_tag charities_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
          placeholder: "Find a charity",
          autocomplete: "off"
        %>
        <%= submit_tag "Search for Charities", class: "btn btn-info mt-2", style:"border-radius: 24px;" %>
      <% end %>
    </div>
  </div>


  <div class="container d-flex flex-wrap justify-content-center">
      <% @charities.each do |charity| %>
        <div class="card-charity d-flex flex-column p-3 m-4">
          <h4 style="color:white"><%= charity.name %></h4>
          <p><%= charity.description %></p>
          <%= link_to "Visit Website", charity.website, target: "_blank", style: "color:white; font-weight: 700; text-decoration: none; margin: 8px 0px;" %>
          <button class="btn btn-info w-50 confettiButton" style="border-radius: 24px;">
            <span>
              Pledge Donation
            </span>
          </button>
        </div>
      <% end %>
  </div>
</div>






