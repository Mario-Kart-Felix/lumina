  
<div class="container align-items-center">
  <div class="d-flex flex-column mr-3 column-right">
    <div class="card-sm-users mb-2", style="border-radius: 12px;">
      <h6 class="ml-4 pt-3", style="color: white;">Connect with Friends</h6>
      <div class="card-user p-3 d-flex flex-wrap justify-content-around align-items-center">
        <% @users.take(6).each do |user| %>
          <%= link_to chatrooms_path(user_two_id: user), method: :post do %>
            <%= cl_image_tag(user.avatar.key, :fetch_format=>:auto, :class=>"avatar", :style=>"height: 75px; width:75px; margin-bottom:8px;") %>
            <p style="color:grey; font-weight: 400; font-size:14px; text-align:center;"><%= user.first_name %></p>
            <br>
          <% end %>
        <% end %>
      </div>
    </div>
    <!--     <div class="container"> -->
    <div class="d-flex flex-wrap">
      <h4 class="mt-5 ml-3" style="color:white;">Meet Someone New</h4>
      <% current_user.strangers.each do |stranger| %>
        <% if current_user.interests.take(3).any? { |interest| stranger.interests.include?(interest)} %>
          <div class="card-sm-users d-flex mt-5" style="border-radius: 12px;">
            <%= link_to profile_path(stranger) do %>
              <%= cl_image_tag(stranger.avatar.key, class:"img-fluid", style:"width: 120px;  border-radius: 12px 0px 0px 12px; margin-right: 16px;") %>
              <div class="d-flex flex-column justify-content-center p-2">
                <h6 style="color: white;"><%= stranger.first_name %> <%= stranger.last_name %></h6>
              <% end %>
              <% current_user.interests.each do |interest| %>
                <% if (stranger.interests.include?(interest)) %>
                  <h6 style="color:lightgrey;">You both love <span class="span-interest"><%= interest %><span> </h6>
                    <% end %>
                  <% end %>
                  <div class="text-left">
                    <%= link_to "Request", friends_path(current_user), controller: "friends", action: 'create', method: 'post', class: "btn-sm btn-info btn-request mt-2", id: stranger.id  %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <!--     </div> -->
