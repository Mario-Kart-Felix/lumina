<!-- # LINKS FOR SIDE BAR -->
<div class="d-flex">
  <div>
    <%= render 'components/side_bar/side_bar_final' %>
  </div>

  <div class="m-5">
    <h3>Feed</h3>
    <p class="pb-3">See updates from friends, family and others you follow.</p>
      <div class="card-for-feed-charity mb-2 text-center">
        <h4 class="pt-2">Charity</h4>
         <i class="fas fa-ribbon ribbon m-1"></i>
        <br>
        <%= @charity.name %>
        <p><%=  h truncate(@charity.description, :length => 100) %></p>
        <p class="location"> <i class="fas fa-globe-asia m-2"></i> <%= @charity.location %> </p>
        <i class="fas fa-wifi pr-3"></i><%= @charity.website %>
        <a href=""><%= link_to "Donate", new_charity_donate_path(@charity), class:"btn btn-info donate-btn" %></a>
      </div>

      <% @users.each do |user| %>
      <div class="card-for-feed mb-2 p-3 d-flex justify-content-start" style="color:white; border-radius: 8px;">
        <%= cl_image_tag(user.avatar.key, :fetch_format=>:auto, :style=>"height: 150px; width: 150px; border-radius: 12px;") %>
        <div class="d-flex flex-column w-25 ml-3 justify-content-center">
          <h5><%= user.first_name %> <%= user.last_name %></h5>
          <%= link_to 'Chat', chatrooms_path(user_two_id: user), method: :post, class:"btn btn-primary my-2" %>
        </div>
      </div>
      <% end %>

  </div>
  <div class="m-5">
    <br>
    <br>
  <p>Notifications</p>

  </div>

</div>
