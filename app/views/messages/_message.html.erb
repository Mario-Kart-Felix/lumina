<div class="message-container" id="message-<%= message.id %>">
  <i class="author">
    <%= cl_image_tag(message.user.avatar.key, :fetch_format=>:auto, :class=>"avatar") %>
    <span style="color:lightgrey; margin-left: 8px; "><%= message.user.nickname %></span>
    <small style="color:lightgrey;"><%= message.created_at.strftime("%l:%M%p") %></small>
  </i>
  <p class="message-content d-flex flex-column mb-4 mt-2"; style="color: white; font-weight: 350;"><%= message.content %></p>
</div>
